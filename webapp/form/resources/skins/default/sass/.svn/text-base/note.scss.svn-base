body{
  background-color: #fff;
  font-size: 12px;
}
.oa-form-note{

  h6{
    color:#050002;
    font-weight: bold;
    font-size: 12px;
  }
  .note-list{
  
    width: 682px;
    margin: 0 auto;
    margin-top: 32px;
    padding-left: 32px;
    .note-list-ul{
      color: #050002;
      background-color: #f2f2f2;
      margin-top: 11px;
      ul{

        border-bottom:1px solid #dedede;
        border-top:1px solid #dedede;
      li{
        border: 1px solid #dedede;
        .li-header{
          height: 32px;
          line-height: 32px;
          padding: 0 18px;
          position: relative;
          cursor: pointer;
          .note-tip{
            border-radius: 4px;
            -webkit-border-radius: 4px;
            width: 29px;
            height: 29px;
            position: absolute;
            left: -33px;
            top: 0px;
            background: #8ec9ec url("../images/note-icon.png") no-repeat;
            background-position:6px 1px;

          }
          .note-other{
            background-position:6px -48px;
          }
          .note-my{
            background-position:6px -110px;
          }
        }
        .on{
          font-weight: bold;
        }
        .li-content{
          border-top: 1px solid #dedede;
          padding: 20px;
          line-height: 18px;
          overflow: hidden;
          display: none;
          word-wrap:break-word;
        }
      }
        .li-other{
          .li-header{
            .note-icon{
              background-position:6px -48px;
            }
          }
        }
        .li-myself{
          .li-header{
            .note-icon{
              background-position:6px -110px;
            }
          }
        }
        .li-open{
          .li-header{
            font-weight: normal;
          }
          .li-content{
            display: block;
          }
        }

      }
    }
  }
  .note-list-none{
      margin: 0 auto;
      margin-top: 49px;
      background-color: #f2f2f2;
     width: 682px;
    height: 86px;
    border: 1px solid #dedede;
    line-height: 84px;
    text-align: center;
    color: #929292;
    font-weight: bold;

  }
  .note-send{
    width: 682px;
    margin: 0 auto;
    margin-top: 16px;
    .textarea{
      width: 100%;
      height:145px;
      border: 1px solid #71b9ed;
      background-color: #f2f2f2;
      padding-top: 10px;
      margin-top: 8px;
      textarea{
        border:0;
        background-color: #f2f2f2;
        width: 95%;
        height: 130px;
      }
    }
    .send-btn{
      cursor: pointer;
      border: 1px solid #4786d5;
      background: 0 0;
      border-radius: 4px;
      -webkit-border-radius: 4px;
      -moz-border-radius: 4px;
      font-size: 12px;
      padding: 5px 24px;
      margin: 0 auto;
      margin-top: 17px;
      display: inline-block;
      -moz-transition: all 1s cubic-bezier(.175,.885,.32,1) 0s;
      -webkit-transition: all 1s cubic-bezier(.175,.885,.32,1) 0s;
      box-shadow: 0 2px 2px #c5c5c5,2px 0 2px #c5c5c5;
      color: #fff;
      background-color: #5b97e1;
      -webkit-box-shadow: 0 2px 2px #c5c5c5,2px 0 2px #c5c5c5;
      &:hover{
        color:#fff;border-color:#3bd;background-color:#3bd
      }
    }
  }
  .note-send-has{

    padding-left: 32px;
  }

}
