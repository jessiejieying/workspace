<body style="height:100%;">
<div class="top">
	<div class="top_box">
    	<a class="title">知识广场</a>
        <div class="search_box">
        	<input id="selectTitle" class="search01" ><input  class="search_btn01" type="image" src="${base}/oa/page/knowledge/knowledgeSquare/images/search_btn01.png" onclick="simpleSelect();">
        </div>
    </div>	
</div>

<div class="container">
	<div class="left">
    	<div class="left_box">
        	<div id = "tree_wrap" style = "width:100%; height:100%; overflow: hidden;">
				<div id = "tree_search"  class = "tree_search" style = "height:30px; min-width:200px;"></div>
				<div id = "tree" style = "width:100%; padding-top: 3px;"></div>
			</div>
        </div>
    </div>
    
   	<div class="middle">
    	<div class="Classification">
        	<ul>
            	<li class="Selected"><a href="javascript:void(0)" class="Selected" onclick="selectType('','')"><span>全部</span></a></li>
            	<#list typeList as dataDict> 
            		<li><a href="javascript:void(0)"  onclick="selectType('type',${dataDict.dictValue})"><span>${dataDict.displayName}</span></a></li>
            	</#list>
            	<#list fileTypeList as dataDict> 
            		<li><a href="javascript:void(0)" onclick="selectType('fileType',${dataDict.dictValue})"><span>${dataDict.displayName}</span></a></li>
            	</#list>
            	
            	
            </ul>
        </div>
        <div class="middle_content">
        	<div class="M_title clearfix">
            	<div class="M_titletext"><a>全部</a></div>
                <div class="page clearfix"><a href="javascript:void(0)"  onclick="previous()">上一页 </a> <a href="javascript:void(0)" onclick="next()">下一页</a></div>
            </div>
            <div class="M_content">
            	<ul id="content">
                	
                	
                </ul>
            </div>
        </div>
    </div>
    
    <div class="right">
    	<div class="R_title"><a>知识分享榜</a></div>
        <div class="Ranking">
        	<div class="Ranking_title"><a>点击排行</a></div>
            <ul id="clickRank" class="R_content">
            	
            </ul>
        </div>
        <div class="Ranking">
        	<div class="Ranking_title"><a>收藏排行</a></div>
            <ul id="collectRank" class="R_content">
            </ul>
        </div>

    </div>
</div>
<script type="text/javascript">
	var layout,treeObj,tree,treeSearch,grid,data,data2,form,option,sendUrl,knowledgeId;
	window.dhx_globalImgPath="${base}/aufw/resources/common/dhtmlx/imgs/";
	var baseDataURL="${base}/admin/knowledgeSquare/selectForSquare.action?a=1";
	var pageCount=14;
	var currentPage=0;
	var totalCount=0;
	var orgId="";
	var type="";
	var typeId="";
	var title="";
	$(function(){
		tree = new dhtmlXTreeObject("tree", "100%", "100%", 'root');
		tree.setImagePath(window.dhx_globalImgPath+"/csh_dhx_terrace/");
		tree.enableSmartXMLParsing(true);
		tree.setSkin('dhx_skyblue');
		tree.enableTreeLines(true);

		tree.loadJSON("${base}/admin/org/showAuOrgTree.action?idMark=org_code_tree&etc=" + new Date().getTime());
		tree.attachEvent("onXLE", function (tree, id) {
			var rootsAr = tree.getSubItems(id);//.split(",");
			tree.openItem(rootsAr);
		});

		tree.attachEvent("onSelect", function (id) {
			window.orgId=id;
			clearPage();
			loadContext();
		});
		treeSearch = new treeSearchBar('tree_search', tree);
		
		
		$('.Classification a').bind('click',function(){
			$(this).parent('li').siblings('li').removeClass('Selected');
			$('.Classification a').removeClass('Selected');	
			$(this).parent('li').addClass('Selected');
			$(this).addClass('Selected');	
			$('.M_titletext a').eq(0).html($(this).children('span').eq(0).html());
		});	
		loadContext();
		leaderboard(0,$("#clickRank"));
		collectLeaderboard(2,$("#collectRank"));
		
		$('.container').height($(window).height()-$('.top').outerHeight(true));
		$('.left_box').height($(window).height()-$('.top').outerHeight(true)-11);
		
		layout();
		$(window).resize(function(){
			layout();
		});
		
		
	});
	
	
	function selectType(type,typeId){
		window.type=type;
		window.typeId=typeId;
		clearPage();
		loadContext();
	}
	
	
	function clearPage(){
		window.currentPage=0;
		window.totalCount=0;
	}
	function previous(){
		if(currentPage<=0){
			return;
		}else{
			currentPage=currentPage-1;
		}
		loadContext();
	}
	function next(){
		if(totalCount<=(currentPage+1)*pageCount){
			return;
		}else{
			currentPage=currentPage+1;
		}	
		loadContext();
	}
	
	function loadContext(){
		jQuery.post(baseDataURL+"&etc="+new Date().getTime(), 
    			{"orgId":orgId,  "type":type,"typeId":typeId,"pageCount":pageCount,"posStart":currentPage*pageCount ,"title":title}, function (loader) {
    				fillContext(loader);
		},"json");      		
	}
	
	function fillContext(jsonData){
		if(jsonData.result=="success"){
			totalCount=jsonData.totalCount;
			$("#content").empty();
			var data=jsonData.data;
			for(var key in data){
				var item=data[key];
				var ele="<li><a href='javascript:void(0)' class='link01' onclick='clickKnowledge(&quot;"+item.id+"&quot;,&quot;"+item.title+"&quot;)'>"+item.title+"</a>";
				ele+="<div class='list_R'>";
				ele+="<a href='javascript:void(0)' class='Collect' onclick='collect(&quot;"+item.id+"&quot;,&quot;"+item.title+"&quot;)'>收藏</a> </div></li>";
				$("#content").append(ele);
			}
			
			$('#content li a').each(function(){
				$(this).width($(this).parent('li').width()-$(this).siblings('.list_R').width()-20);
			});
			
		}else{
			$.dialog.tips(jsonData.message);
		}	
	}
	
	function leaderboard(status,obj){
		$.post("${base}/admin/count/countByMap.action?etc="+new Date().getTime(),{"status":status},function(jsonData){
			fillLeaderboard(jsonData,obj);
     	});
	}
	
	function collectLeaderboard(status,obj){
		$.post("${base}/admin/collect/countByMap.action?etc="+new Date().getTime(),{},function(jsonData){
			fillLeaderboard(jsonData,obj);
     	});
	}
	
	function fillLeaderboard(jsonData,obj){
		if(jsonData.result=="success"){
			obj.empty();
			var data=jsonData.data;
			for(var key in data){
				if(Number(key)>=5){
					break;
				}
				var item=data[key];
				var ele="<li><a onclick=clickKnowledge("+"'"+item.knowledgeId+"','"+item.knowledgeTitle+"') href='javascript:void(0)'>"+(Number(key)+1)+"."+item.knowledgeTitle+"</a><span>("+item.num+")</span></li>";
				obj.append(ele);
			}
		}
	}
	
	
	function collect (id,title) {
        $.post("${base}/admin/collect/insert.action?etc="+new Date().getTime(),{"knowledgeCollect.KnowledgeId":id,"knowledgeCollect.knowledgeTitle":title},function(result){
            if(result.result=="success"){
            	$.dialog.tips("收藏成功")
            }else{
            	$.dialog.tips(result.message);
            }  
        });
    }
	
	function comment (id) {
		$.dialog.tips("未定义");
	}
	
	function clickKnowledge(id,title){
 		 $.post("${base}/admin/count/insert.action?etc="+new Date().getTime(),{"knowledgeCount.KnowledgeId":id,"knowledgeCount.knowledgeTitle":title,"knowledgeCount.status":0},function(result){
            // $.dialog.tips(result.message);
     	}); 
		 window.top.createWindow(
					{   id      :'viewKnowledgeWin',
						text    : "详情",
						url     : "${base}/admin/knowledgeSquare/viewKnowledgePage.action?knowledge.id="+id+"&etc="+new Date().getTime(),
						width   :'650',
						height  :'500',
						parent_ifr : window
					}
				);
	}
	function simpleSelect(){
		title=$("#selectTitle").val();
		clearPage();
		loadContext();
	}
	
	
	function layout(){		
		
		$('.container').width($(window).width());
		if($('.container').width()<980){
			//$('.container').width(980)
		}
		$('.middle:first').width($(window).width()-$('.left:first').width()-$('.right:first').width());
		if($('.middle:first').width()<563){
			$('.middle:first').width(563);
		}
		$('.top').width($('.container').width());
		
		$('#content li a').each(function(){
			$(this).width($(this).parent('li').width()-$(this).siblings('.list_R').width()-20);
		});
	}
	
</script>
</body>
</html>
