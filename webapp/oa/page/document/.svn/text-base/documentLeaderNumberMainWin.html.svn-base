<!DOCTYPE html>
<html style="overflow: hidden; height: 100%;">
<head><#include "/aufw/page/include/head.html">
</head>
<body style="height: 100%;">
  <div class="container-layout line">
    <#include "/aufw/page/include/script.html">
    <table style="width: 100%;" id="common_table">
      <tr>
        <!-- 右侧 -->
        <td class="ver-top">
          <div class="grid-table-top" id="grid_table">
            <div class="js-tool-bar">
              <div class="form-group header-group">
                <@f.operateRight operate="/admin/documentLeaderNumber/insert.action">
                <div class="button button-main js-add-account" id="add">增加</div>
                </@f.operateRight> <@f.operateRight operate="/admin/documentLeaderNumber/delete.action">
                <div class="button  margin-left-in" id="delete">删除</div>
                </@f.operateRight> 
                <select id="search" class="input margin-left-out" style="width: 100px;" name="age">
                  <option value="criteriaFileNumberName">名称</option>
                </select>
              <input id="search_text" type="text" class="tool-bar-input margin-left-in" id="grid_input" placeholder="输入关键字" />

                <div class="button button-main margin-left-in" id="grid_search">搜索</div>
              </div>
            </div>
            <div class="js-grid-father grid-father">
              <table id="manage_grid" class="bsgrid">
                <tr>
                  <th w_index="primaryKey" w_hidden="true" class="hidden"></th>
                  <th w_check="true" width="40"></th>
                  <th w_index="fileNumberName" width="200">省长名称</th>
                  <th w_index="fileNumberType" width="200">对应省长</th>
                  <th w_index="fileNumberFormat" >省长号格式</th>
                  <th w_index="operate" width="140">操作</th>
                </tr>
              </table>
            </div>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <script>

var gridOne, jsTree;
var selectURL = "${base}/admin/documentLeaderNumber/fetchByCriteria.action";
$(function(){
    layOut("#common_table","#grid_table");
    //grid初始化
    gridOne=$.fn.bsgrid.init("manage_grid", {
        url:selectURL + "?etc="+new Date().getTime(),
        row_primary_key: "primaryKey",
        autoLoad: true,
        pageSizeSelect: true,
        pageSize:15,
        complete:function(options, XMLHttpRequest, textStatus){
        },
        additionalBeforeRenderGrid:function(parseSuccess, gridData, options){
        },
        additionalAfterRenderGrid:function(){			
             gridOne.initGrid();         
        }
    });
    //工具条搜索
    $(document).on("click","#grid_search",function(){
        var clu = $("#search").val();
        var value = $("#search_text").val()=='请输入关键字'?'':$("#search_text").val();
        gridOne.changeUrl(selectURL + "?" + clu + '=' + window.encodeURI(value) + '&etc='+new Date().getTime());
    });
    
    //工具条增加
    $(document).on("click","#add",function(){	
        var win = {text:"添加省长号", url:"${base}/admin/documentLeaderNumber/documentLeaderNumberEditWin.action?etc=" + new Date().getTime(),width:'900',height:'550', id:"addDocumentLeaderNumberWin",'parentIfr':window};
        window.top.createWindow(win);
    });
    //工具条删除
    $(document).on("click","#delete",function(){
        var checkedRowsRecoreds = gridOne.getCheckedRowsRecords();
        
        if(checkedRowsRecoreds.length < 1) {
        	layer.msg('请至少选择一条数据');
        	return
        }
        var idArr=[];
        for(var i = 0; i < checkedRowsRecoreds.length; i ++) {
        	var record = checkedRowsRecoreds[i];
        	idArr.push(record.id);
        }
		layer.confirm('你确定要删除这些数据吗？', function(index){
		   
		    $.post("${base}/admin/documentLeaderNumber/delete.action", {"ids":idArr.join(",")}, function(result){
		        if(result.resultFlag=="true"){
		            gridOne.refreshPage();
		        }
		        layer.msg(result.message);
		    });	    
		    layer.close(index);
		});
        
    });

});

//删除
function d(selId){
	var record = getRecord(selId);
	if(record == null) {
		return;
	}
  	layer.confirm('你确定要删除这些数据吗？', function(index){		   
	    $.post("${base}/admin/documentLeaderNumber/delete.action", {"ids":record.id}, function(result){
	        if(result.resultFlag=="true"){
	            gridOne.refreshPage();
	        }
	        layer.msg(result.message);
	    });
	    
	    layer.close(index);
	});
}

function getRecord(selId) {
	var getIndex = -1,getId="#grid_"+selId;
    getIndex = $(getId).attr("index");
    if(getIndex == -1){
    	return null;
    }
	return gridOne.getRowRecord(gridOne.getRow(getIndex));
}
//修改
function e(selId){
	if(selId){
		var win = {text:"修改省长号", url:"${base}/admin/documentLeaderNumber/documentLeaderNumberEditWin.action?documentLeaderNumber.id="+selId,width:'900',height:'550', id:"updateFileNumberWin",'parentIfr':window};
		window.top.createWindow(win);
	}
}

</script>
</body>
</html>
